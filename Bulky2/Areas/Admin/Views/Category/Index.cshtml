@model List<Category>

<div class="row py-4">
    <div class="col-6">
        <h2>Category List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary d-inline-flex align-items-center">
            <i class="bi bi-plus-circle pe-2"></i>Create New Category
        </a>
    </div>
    <partial name="_Notification" />
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder)) {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td class="d-flex justify-content-end">
                    <div class="btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary ms-auto">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
