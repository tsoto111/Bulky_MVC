@model List<Product>

<div class="row py-4">
    <div class="col-6">
        <h2>Product List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary d-inline-flex align-items-center">
            <i class="bi bi-plus-circle pe-2"></i>Create New Product
        </a>
    </div>
    <partial name="_Notification" />
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>List Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>@obj.ListPrice</td>
                <td>@obj.CategoryId</td>
                <td class="d-flex justify-content-end">
                    <div class="btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary ms-auto">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
