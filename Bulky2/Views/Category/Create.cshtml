@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create Category</h2>
            <hr/>
            @*
            <!-- Example of a global validation form summary with errors -->
            @if (ViewData.ModelState.IsValid == false)
            {
                <div class="alert alert-danger" role="alert">
                    <span>Oops, there was a problem:</span>
                    <div asp-validation-summary="All"></div> <!-- Example of displaying ALL validation errors, even ones unrelated to model when field is not defined in Controller -->
                    <div asp-validation-summary="ModelOnly"></span> <!-- Example of displaying Model Only validation errors, unscoped validations won't be displayed -->
                </div>
            }
            *@
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            Create
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
            Back To List
        </a>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}